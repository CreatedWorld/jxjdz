        coinTxt = transform.Find("Head/CoinTxt").GetComponent<Text>();
        headIcon = transform.Find("Head/HeadIcon").GetComponent<RawImage>();
        readyIcon = transform.Find("Head/ReadyIcon").gameObject;
        bankerIcon = transform.Find("Head/BankerIcon").gameObject;
        voicePlayIcon = transform.Find("Head/VoicePlayIcon").gameObject;
        chatView = transform.Find("Head/ChatView").gameObject;
