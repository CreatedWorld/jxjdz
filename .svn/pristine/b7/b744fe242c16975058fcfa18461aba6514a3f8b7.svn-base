 */
public class ClientCode {
    public static final int SUCCESS = 1;
    public static final int FAILED = 0;

    //roomServer
    public static final int ALREADY_IN_ROOM = 1001;//已经在房间内
    public static final int NO_ROOM = 1002;//房间不存在
    public static final int NOT_IN_ROOM = 1003;//不在该房间中
    public static final int USER_STATE_NOT_MATCH = 1004;//玩家状态不匹配
    public static final int NO_SEAT_IN_ROOM = 1005;//已经有玩家在该座位上，不能加入
    public static final int NOT_LIMIT_DISSOLVE_ROOM = 1006;//不允许解散房间
    public static final int OVERFLOW_ROOM_ROUNDS = 1007;//超过房间允许的局数
    public static final int OVERFLOW_ROOM_PLAYERS = 1008;//房间人数已满
    public static final int NO_EXIT_BY_ROOM_START = 1009;//游戏已开局，不能退出房间


