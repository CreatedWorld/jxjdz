package avatar.module.mahjong.draw;

import avatar.module.mahjong.MahjongGameData;

/**
 * 全民麻将项目的流局判断逻辑
 */
public class QuanMingDraw implements Draw {

    @Override
    public boolean isDraw(MahjongGameData mahjongGameData) {
        if (mahjongGameData.getLeftCards().size() == 0) {
            return true;
        } else {
            return false;
        }
    }
}
